
  <% if dbentry.errors.any? %>

    <div class="container-fluid col-sm-offset-1">
      <div id="error_explanation" class="col-sm-3 alert alert-danger">
        <h4><%= pluralize(dbentry.errors.count, "error") %></h4>
        <ul>
        <% dbentry.errors.full_messages.each do |message| %>
          <li><%= message%></li>
        <% end %>
        </ul>
      </div>
    </div>
    <% end %>
