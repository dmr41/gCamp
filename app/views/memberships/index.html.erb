
  <%if notice !=nil%>
  <div class="alert alert-success">
    <%= notice %>
  </div>
  <%end%>
<h1><%= "My Project: #{@project.name}"%></h1>


    <ol class="breadcrumb">
      <li><%=link_to "Projects", projects_path%></li>
      <li><%= link_to " #{@project.name}", project_path(@project) %></li>
      <li>Memberships</li>
    </ol>

    <% if @role == "Owner" %>
      <%= render "form" %>
    <% else %>

      <table>
        <tbody>
          <% @memberships.each do |membership| %>
          <tr class="below">
          <td class="col-sm-1"><%= link_to membership.user.full_name, user_path(membership.user)%></td>
          <td class="col-sm-1">
            <%= membership.role%>
          </td>
          <td class="col-sm-1">
            <% if membership.user_id == current_user.id %>
            <%= link_to "", project_membership_path(@project, membership), method: :delete, data: {confirm: "Are you sure?"}, class: "glyphicon glyphicon-remove" %></td>
            <% end %>
          </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    <% end %>
