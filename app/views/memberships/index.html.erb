
  <%if notice !=nil%>
  <div class="alert alert-success">
    <%= notice %>
  </div>
  <%end%>
<h1><%= "My Project: #{@project.name}"%></h1>


    <ol class="breadcrumb">
      <li><%=link_to "Projects", projects_path%></li>
      <li><%= link_to " #{@project.name}", project_path(@project) %></li>
      <li>Memberships</li>
    </ol>

    <% if @membership.errors.any? %>
    <div  class="col-sm-6 alert alert-danger">
      <h5><%= pluralize(@membership.errors.count, "error") %> prohibited from this form being saved</h5>
      <ul>
        <% @membership.errors.full_messages.each do |message| %>
        <li><%= message%></li>
        <% end %>
      </ul>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <% end %>
    <% if @role == "Owner" %>
      <%= render "form" %>
    <% else %>

      <table class="table">
        <tbody>
          <% @memberships.each do |membership| %>
          <tr>
          <td><%= link_to membership.user.full_name, user_path(membership.user)%></td>
          <td>
            <%= membership.role%>
          </td>
          <td>
            <% if membership.user_id == current_user.id %>
            <%= link_to "", project_membership_path(@project, membership), method: :delete, data: {confirm: "Are you sure?"}, class: "glyphicon glyphicon-remove" %></td>
            <% end %>
          </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    <% end %>
