<%= form_for([@project,@task], {class: "form-horizontal center"}) do |f| %>

<div class="col-md-offset-1"><%= render "layouts/le_mistakes", model: @task %></div>
    <div class="form-group">
      <div class="col-sm-1">
        <%= f.label :description, class: "control-label"%>
      </div>
      <div class="col-sm-4 col-sm-offset-1">
        <%= f.text_field :description, class: "form-control"%>
      </div>
      <br>
      <br>
    </div>
      <div class="form-group">
        <div class="col-sm-1">
          <%= f.label :date, class: "control-label"%>
        </div>
          <div class="col-sm-2 col-sm-offset-1">
            <%= f.date_field :date, class: "form-control" %>
          </div>
          <br>
          <br>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2">
        <% unless params[:action] == 'create' || params[:action] == 'new' %>
          <div class="chckshift"><%= f.check_box :complete%>
            <%= f.label :complete, class: "control-label"%>
          </div>
        <%end%>
        </div>
      </div>
        <div class="actions col-sm-offset-2">
          <%= f.submit class: 'btn btn-primary'%>
        </div>
<% end %>
