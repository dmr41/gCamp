<div class="outercontainer">
      <div class="page-header">
      <div class="row">
        <div class="col-md-12">
            <h1>Listing tasks
              <button type="button" class="btn btn-info pull-right"><%= link_to 'New Task', new_task_path, class: "btn-info"%></button>
            </h1>
        </div>
      </div>
     </div>
      <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th class="col-md-3">Description</th>
                  <th class="col-md-2" colspan="1">Complete</th>
                  <th class="col-md-2"colspan="1">Date</th>
                  <th class="col-md-3" colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @tasks.each do |task| %>
                <tr>
                  <td><%= task.description %></td>
                  <td><%= task.complete.to_s.capitalize %> </td>
                  <td><%= task.date%> </td>
                  <td><button type="button" class="btn btn-primary"><%= link_to 'Show', task, class: "btn-primary" %></button></td>
                  <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_task_path(task), class: "btn-warning" %></button></td>
                  <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', task, class: "btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
