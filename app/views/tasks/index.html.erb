<div class="outercontainer">
      <div class="page-header">
      <div class="row">
        <div class="col-md-12">
            <h1>Listing tasks
              <small class="pull-right retext"><%= link_to('All Tasks', tasks_path(all_task: "All tasks"))%> |
                                        <%= link_to 'Unfinished Tasks', tasks_path(incomplete: "incomplete tasks")%>
                                        <%= link_to 'Create Task', new_task_path, class: "btn btn-info"%>
              </small>
            </h1>


        </div>
      </div>
     </div>
      <div class="row">
        <div class="col-md-12">
            <table class="table">
              <thead>
                <tr>
                  <th class"col-md-8">Description</th>
                  <th>Complete</th>
                  <th>Date</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @tasks.each do |task| %>
                <%if task.date != nil%>
                <%if task.date >= Date.today && task.date <= Date.today+7%>
                  <tr class="alert alert-success">
                <% else%>
                  <tr>
                  <%end%>
                  <%end%>
                  <td class"col-md-8"><%= task.description %></td>
                  <td><%= task.complete.to_s %> </td>
                      <%if task.date%>
                      <td><%= task.date.strftime("%m/%d/%Y")%></td>
                      <%else %>
                        <td><%=task.date%></td>
                      <%end%>
                      </td>

                  <td>
                    <div class="pull-right">
                      <!-- <button type="button" class="btn btn-primary"> -->
                      <%= link_to 'Show', task, class: "btn btn-primary" %>
                      <!-- <button type="button" class="btn btn-warning"> -->
                      <%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning" %>
                      <!-- <button type="button" class="btn btn-danger"> -->
                      <%= link_to 'Destroy', task, class: "btn btn-danger",
                                                    method: :delete,
                                                    data: { confirm: 'Are you sure?' } %>
                    </div>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
