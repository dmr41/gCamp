<div class="container-fluid">
  <% if notice == "Task was successfully created." || notice == "Task was successfully destroyed." || notice == "Task was successfully updated."%>
    <p id="notice" class="alert alert-success"><%= notice %></p>
  <%end%>
    <br>
    <br>
    <h2 class="page-header"><%= @task.description%><%= link_to 'Edit', edit_project_task_path(@project,@task), class: "btn btn-info pull-right" %></h2>
    <ol class="breadcrumb">
      <li><%=link_to "Projects", projects_path%></li>
      <li><%= link_to " #{@task.description}", project_task_path(@project,@task) %></li>
      <li>Tasks</li>
    </ol>

  <p>
    <strong>Complete: </strong>
    <strong class="tsize"><%=@task.complete%></strong
  </p>

  <p>
    <strong>Due Date: </strong>
    <%if @task.date != nil %>
      <strong class="tsize"><%= @task.date.strftime("%m/%d/%Y")%></strong>
    <%else%>
      <strong class="tsize"><%= @task.date%></strong>
    <%end%>
    </p>
  </p>
  <br></br>
  <table>
    <tr>

    <table class="table">
  <% @comments.each do |comment| %>
      <tr>
        <td class="col-md-3"><%= link_to comment.user.full_name, user_path(comment.user.id)%><br><%="#{time_ago_in_words(comment.created_at)}"%></td>
        <td class="col-md-6"><%= comment.description %></td>
  <% end %>
      </tr>
    </table>

    </tr>
  </table>
<%= form_for [ @comment], url: { :action => "create_comment"} do |f| %>
      <div class="container form-group">
        <div class="col-md-offset-2 col-md-9">
          <%= f.text_area :description, class: "form-control"  %>
        </div>
      </div>
      <div class="container form-group">
        <div class="row">
            <div class="col-md-offset-2 shifty">
            <%= f.submit "Add Comment", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
<% end %>
</div>
