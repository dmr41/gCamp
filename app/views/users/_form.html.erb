
<%= form_for(@user, {class: "form-horizontal center"}) do |f| %>

  <% if @user.errors.any? %>
    <div class="container-fluid col-sm-offset-2">
      <div id="error_explanation" class="col-sm-3 alert alert-danger">
      <h4><%= pluralize(@user.errors.count, "error") %></h4>
        <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
  </div>
  <% end %>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :first_name, class: "control-label"%>
      </div>
      <div class="col-sm-3">
        <%= f.text_field :first_name, class: "form-control"%>
      </div>
      <br>
      <br>
    </div>

      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :last_name, class: "control-label"%>
        </div>
          <div class="col-sm-3 ">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <br>
          <br>
      </div>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label "email", class: "control-label"%>
        </div>
          <div class="col-sm-3">
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <br>
          <br>
          <br>
          <div class="form-group">
            <div class="col-sm-2">
            <%= f.label :password, class: "label-control" %>
          </div>
          <div class="col-sm-3">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
          <br>
          <br>
          <div class="form-group">
            <div class="col-sm-2 bob">
            <%= f.label :password_confirmation, class: "label-control" %>
          </div>
          <div class="col-sm-3">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
          </div>
          <br>

      </div>
        <div class="actions col-sm-offset-2">

          <%= f.submit class: 'btn btn-primary'%>

        </div>
<% end %>
