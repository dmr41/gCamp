<%if notice !=nil%>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<%end%>

<div class="page-header">
  <h1 class="heading-shift">
    Projects
    <small class="pull-right">
    <%=link_to "Create project", new_project_path, class: "btn btn-info"  %>
    </small>
  </h1>
  <hr>
</div>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th class="col-md-1">
          Name
        </th>
        <th class="col-md-2">
          Tasks
        </th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
      <tr>
        <td class="col-md-1">
          <%= link_to("#{project.name}", project_path(project))%>
        </td>
        <td class="col-md-2">
        <%= link_to("#{project.tasks.count}", project_tasks_path(project))%>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
